<!doctype html>

<html class="home blog no-js" lang="en-US">
<head>
    <title>Kaaf Events</title>

    <meta charset="UTF-8"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css" media="all"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Amatic+SC%3A400%2C700%7CLato%3A400%2C700%2C400italic%2C700italic&amp;ver=4.9.8"
          type="text/css" media="screen"/>
    <link rel="stylesheet" href="/public/user/css/style.css" type="text/css" media="screen"/>
    <link rel="stylesheet" href="/public/user/css/print.css" type="text/css" media="print"/>
    <link rel="icon" href="/public/user/images/kaaflogo.png">



    <script src='/public/user/js/jquery-3.0.0.min.js'></script>
    <script src='/public/user/js/jquery-migrate-3.0.1.min.js'></script>
  

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

    <style>
        .text-black{
            color: black;
            font-size:2rem;
        }
        .text-bl{
            color: black;
            font-size:1.5rem;
    
        }
    </style>
 
    <style>
        .part2,
        .part3,
        .part4,
        .part5,
        .part6,
        .part7 {
            display: none;
        }
        label{
            font-size: large;
        }

        .form-container {
            max-width: 600px;
            margin: auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            height: 4em;
            margin-bottom: 15px;
        }

        .btn-container {
            text-align: center;
        }
    </style>

</head>
<body class="home sticky-menu sidebar-off" id="top">


 <!-- Header  -->
 <%- include('header') -%> 
 <!-- Header end  -->

 <div class="wrap full-wrap">
    <div class="main-wrap">
        <form id="bookingForm" method="post" action="/user/bookings">
        <section class="main">
            <!-- part1 -->
                <div class="part1">
                            <h1 style="text-align: center;"><strong>Book Your Event</strong></h1>
                    <br>
                    <br>

                    <div class="form-control">
                        <label>How many people are you expecting?</label>
                        <input type="number" name="participants">
                        
                    </div>

                    <div class="form-control">
                        <label>Event type:</label>
                        <select name="eventType" >
                            <option value="weddings">Weddings</option>
                            <option value="birthday">Birthday</option>
                            <option value="gatherings">Gatherings</option>
                            <option value="bridalShower">Bridal Shower</option>
                            <option value="babyShower">Baby Shower</option>
                            <!-- You can add more options as needed -->
                        </select>
                    </div>

                    <div class="form-control mt-5">
                        <label style="margin-right: 10px;">Event mode:</label>
                        <input type="radio" name="eventMode" value="indoor" id="indoor">
                        <label for="indoor" style="margin-right: 10px;" >Indoor</label>

                        <input type="radio"  name="eventMode" value="outdoor" id="outdoor">
                        <label for="outdoor">Outdoor</label>
                    </div>

                    <div class="form-control" style="margin-right: 10px;">
                        <label>Event Date:</label>
                        <input type="date" name="eventdate">
                    </div>
                    <input type="hidden" name="username" value="<%=user.user_name %>"/>
                    <input type="hidden" name="userId" value="<%=user.user_id %>"/>
                    <input type="hidden" name="userPhone" value="<%=user.user_phone %>"/>
                    <div class="btn-container">
                        <button type="button" onclick="nextStep(2)">Next</button>
                    </div>
                </div>
            </div>
            <!-- end part1 -->
            <!-- part -2 -->
                <div class="part2">
                    <div class="card w-100">
                        <div class="card-body p-4">
                            <h3 class="card-title fw-semibold mb-4">choose Venue</h3>
                            <div class="table-responsive">
                                <table class="table text-nowrap mb-0 align-middle">
                                <thead class="text-dark fs-4">
                                    <tr>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Id</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0 text-black">Venue name</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0 text-black">Category</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0 text-black">Price</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0 text-black">Location</h6>
                                        </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0 text-black">Description</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0 text-black">Image</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0 text-black">select</h6>
                                    </th>
                                    </tr>
                                </thead>
                                    <tbody>
                                            <% venues.forEach((Item,index)=>{ %>
                                            <tr>
                                            <td class="border-bottom-0"><h6 class="fw-semibold mb-0"><%= index + 1 %></h6></td>
                                            <td class="border-bottom-0">
                                                <p class="mb-0 fw-normal"><%= Item.venue_name %></p>                         
                                            </td>
                                            <td class="border-bottom-0">
                                                <p class="mb-0 fw-normal"><%= Item.venue_category %>category</p>
                                            </td>
                                            <td class="border-bottom-0">
                                                <p class="mb-0 fw-normal"><%= Item.venue_amount %></p>
                                            </td>
                                            <td class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0 fs-4"><%= Item.venue_location %></h6>
                                            </td>
                                            <td class="border-bottom-0">
                                                <p class="mb-0 fw-normal"><%= Item.venue_desc %></p>
                                            </td>
                                            <td class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0 fs-4"><img src="../../public/venue/images/<%= Item.venue_id %>.png" alt="product image" width="50"></h6>
                                            </td>
                                            <td class="border-bottom-0">
                                                <input type="checkbox"  value ="<%=Item.venue_id%>" name="venueId">
                                            </td>
                                        
                                            </tr>   
                                            <% }); %>
                                    </tbody>
                                
            
                                </table>
                                <div class="btn-container">
                                    <button type="button" onclick="nextStep(3)">Next</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- part-3 -->
                        <div class="part3">
                            <div class="card w-100">
                                <div class="card-body p-4">
                                <h3 class="card-title fw-semibold mb-4">Decor List</h3>
                                    <div class="table-responsive">
                                        <table class="table text-nowrap mb-0 align-middle">
                                        <thead class="text-dark fs-4">
                                            <tr>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0 text-black">Id</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0 text-black">name</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0 text-black">Category</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0 text-black">Price</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0 text-black">Description</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0 text-black">Image</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0 text-black">Selete</h6>
                                            </th>
                                            </tr>
                                        </thead>
                    
                                        <tbody>
                            
                                            <% decor.forEach((Item, index) => { %>  
                                            <tr>
                                            <td class="border-bottom-0"><h6 class="fw-semibold mb-0"><%= index + 1 %></h6></td>
                                            <td class="border-bottom-0">
                                                <p class="mb-0 fw-normal"><%= Item.decor_name %></p>                         
                                            </td>
                                            <td class="border-bottom-0">
                                                <p class="mb-0 fw-normal"><%= Item.decor_category %></p>
                                            </td>
                                            <td class="border-bottom-0">
                                                <p class="mb-0 fw-normal"><%= Item.decor_price %></p>
                                            </td>
                                            <td class="border-bottom-0">
                                                <p class="mb-0 fw-normal"><%= Item.decor_desc %></p>
                                            </td>
                                            <td class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0 fs-4"><img src="../../public/decor/images/<%= Item.decor_id %>.png" alt="product image" width="50"></h6>
                                            </td>
                                            <td class="border-bottom-0">
                                                <input type="checkbox"  value ="<%=Item.decor_id %>" name="decorId">
                                            </td>
                                            </tr>  
                                            <% }); %>
                                        </tbody>  
                    
                                        </table>
                                    </div>
                                </div>
                                <div class="btn-container">
                                    <button type="button" onclick="nextStep(4)">Next</button>
                                </div>
                            </div>
                        </div>
                <!-- part-4 -->
                <div class="part4">
                    <div class="card w-100">
                        <div class="card-body p-4">
                            <h3 class="card-title fw-semibold mb-4">cuisine List</h3>
                            <div class="table-responsive">
                              <table class="table text-nowrap mb-0 align-middle">
                                <thead class="text-dark fs-4">
                                  <tr>
                                    <th class="border-bottom-0">
                                      <h6 class="fw-semibold mb-0">Id</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                      <h6 class="fw-semibold mb-0">name</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                      <h6 class="fw-semibold mb-0">Catering name</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                      <h6 class="fw-semibold mb-0">Category</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                      <h6 class="fw-semibold mb-0">Price</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                      <h6 class="fw-semibold mb-0">Description</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                      <h6 class="fw-semibold mb-0">Selete</h6>
                                    </th>
                                  </tr>
                                </thead>
                        
                                <tbody>
                                  <% if ( cuisine && cuisine.length > 0) { %>
                                    <% cuisine.forEach((Item, index) => { %>  
                                  <tr>
                                    <td class="border-bottom-0"><h6 class="fw-semibold mb-0"><%= index + 1 %></h6></td>
                                    <td class="border-bottom-0">
                                      <p class="mb-0 fw-normal"><%= Item.cuisine_name %></p>                         
                                    </td>
                                    <td class="border-bottom-0">
                                      <p class="mb-0 fw-normal"><%= Item.cuisine_category %></p>
                                    </td>
                                    <td class="border-bottom-0">
                                      <p class="mb-0 fw-normal"><%= Item.cuisine_price %></p>
                                    </td>
                                    <td class="border-bottom-0">
                                      <p class="mb-0 fw-normal"><%= Item.cuisine_desc %></p>
                                    </td>
                                    <td class="border-bottom-0">
                                        <input type="checkbox"  value ="<%=Item.cuisine_id %> | <%=Item.catering_id %>" name="cuisineId">
                                    </td>
                                  </tr>  
                                  <% }); %>
                                  <% } else { %>
                                    <tr>
                                      <td colspan="9" class="text-center">No data available</td>
                                    </tr>
                                  <% } %>                      
                                </tbody>  
                        
                              </table>
                            </div>
                          </div>
                        <div class="btn-container">
                            <button type="button" onclick="nextStep(5)">Next</button>
                        </div>
                    </div>
                </div>
                <!-- part-5 -->
                    <div class="part5">
                       
                        <div class="card w-100">
                            <div class="card-body p-4">
                              <h3 class="card-title fw-semibold mb-4"> choose photohraphy team</h3>
                              <div class="table-responsive">
                                <table class="table text-nowrap mb-0 align-middle">
                                  <thead class="text-dark fs-4">
                                    <tr>
                                      <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0 text-black">Id</h6>
                                      </th>
                                      <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0 text-black">Photography name</h6>
                                      </th>
                                    
                                      <th class="border-bottom-0">
                                          <h6 class="fw-semibold mb-0 text-black">Location</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                          <h6 class="fw-semibold mb-0 text-black">photo price</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                          <h6 class="fw-semibold mb-0 text-black">video price</h6>
                                        </th>
                                      <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0 text-black">Description</h6>
                                      </th>
                                      <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0 text-black">Selete</h6>
                                      </th>
                                    </tr>
                                  </thead>
              
                                  <tbody>
                                  
                                      <% photo.forEach((Item, index) => { %>
                                    <tr>
                                      <td class="border-bottom-0"><h6 class="fw-semibold mb-0"><%= index + 1 %></h6></td>
                                      <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal"><%= Item.photo_name %></p>                         
                                      </td>
                                      <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal"><%= Item.photo_location %></p>
                                      </td>
                                      <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal"><%= Item.photo_amount %></p>
                                      </td>
                                      <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal"><%= Item.video_amount %></p>
                                      </td>
                                      <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal"><%= Item.photo_desc %></p>
                                      </td>
                                      <td class="border-bottom-0">
                                        <input type="checkbox"  value ="<%=Item.photo_id%>" name="photoId">
                                    </td>
                                    </tr>   
                                    <% }); %>
                                                        
                                  </tbody>  
              
                                </table>
                              </div>
                              <div class="btn-container">
                                <button type="submit" >Submit Form</button>
                            </div>
                            </div>
                          </div>
                    </div>
                    <!-- finished -->
                    </div>
                  </div>


            </div>
            


        </section>
    </form>


    </div><!-- /main-wrap -->


</div><!-- /wrap -->



<script>

    function nextStep(step) {
        // Hide the current step
        document.querySelector(`.part${step-1}`).style.display = 'none';

        // Show the next step
        currentStep = step;
        document.querySelector(`.part${step}`).style.display = 'block';
    }
</script>



</body>
</html>